################################
# BOOTSTRAP GLOBAL CONFIGURATION
################################
# This is the ONLY file you need to edit!
# All service configuration is managed here.

#=-------------------------=#
#= Domain Configuration    =#
#=-------------------------=#

# Your primary domain name
# Services will be accessible at:
#   - komodo.yourdomain.com
#   - traefik.yourdomain.com
DOMAIN=yourdomain.com

# Email address for all services
# Used for: Let's Encrypt, Cloudflare, Infisical admin
ACME_EMAIL=your_email@example.com

#=-------------------------=#
#= Cloudflare Configuration=#
#=-------------------------=#

# Cloudflare API Token for DNS challenge
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone:DNS:Edit
CF_DNS_API_TOKEN=your_cloudflare_api_token_here


#=-------------------------=#
#= Network Configuration   =#
#=-------------------------=#

# Traefik static IP for binding ports (e.g., 10.10.9.1)
# This IP is used to expose Traefik services (HTTPS, SSH, Redis)
TRAEFIK_IP=10.10.9.1

# Traefik static IP on br9 network (optional)
# Only needed if you use a br9 network for internal routing
TRAEFIK_BR9_IP=x.x.x.x

# Traefik version
TRAEFIK_VERSION=v3.2.3

# Redis version
REDIS_VERSION=alpine

#=-------------------------=#
#= Paths Configuration     =#
#=-------------------------=#

# Komodo backup path
KOMODO_BACKUPS_PATH=/backups

# Komodo stacks path
KOMODO_STACKS_PATH=/stacks

#=-------------------------=#
#= Timezone                =#
#=-------------------------=#

# Timezone for all services
TZ=America/Chicago

#=-------------------------=#
#= Auto-Generated Secrets  =#
#=-------------------------=#
# These are generated by setup.sh - DO NOT EDIT MANUALLY

# Redis password (for traefik-kop nodes)
REDIS_PASSWORD=

# Komodo secrets
KOMODO_DB_USERNAME=admin
KOMODO_DB_PASSWORD=
KOMODO_PASSKEY=
KOMODO_WEBHOOK_SECRET=
KOMODO_JWT_SECRET=
KOMODO_INIT_ADMIN_USERNAME=admin
KOMODO_INIT_ADMIN_PASSWORD=
KOMODO_API_TOKEN=
